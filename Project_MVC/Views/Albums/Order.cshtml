@model AlbumsViewModel
@using ChinookEntities
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chinook Web App</title>
    <style>
        td, th {
            padding: 5px;
        }

        #details {
            padding: 5px;
        }
    </style>
</head>

<body>
    <h1>@Model.orderedBy</h1>

    <br>
    <hr>
    <br>

    <table border="1">
        <tr>
            <th>Album ID</th>
            <th>Album Title</th>
            <th>Album Artist</th>
        </tr>

        @foreach (Album album in @Model.Albums)
        {
            <tr>
                <td>@album.AlbumId</td>
                <td><a class="btn-primary" id="details" href="~/Tracks/Index/@album.AlbumId">@album.Title</a></td>
                <td>@Html.DisplayFor(artist => album.Artist.Name)</td>
            </tr>
        }
    </table>
    <a href="~/Albums/Index">Back</a>
</body>

</html>

